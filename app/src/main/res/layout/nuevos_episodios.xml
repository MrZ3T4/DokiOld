<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:nestedScrollingEnabled="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/nuevos_episodios_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="Animeinfo"
        android:foreground="@drawable/ripple_effect">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/nuevos_episodios_imagen"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/miniatura"
            app:siShape="@drawable/api_shape"
            app:siSquare="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/gradient_image">
            </View>

            <TextView
                android:id="@+id/_nuevos_episodios_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kimetsu no Yaiba"
                android:textColor="#FFFFFF"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginTop="140dp"
                android:layout_marginStart="10dp"/>

            <TextView

                android:id="@+id/_nuevos_episodios_numero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Episodio 3"
                android:textColor="#FFFFFF"
                android:layout_marginTop="170dp"
                android:layout_marginStart="10dp"/>

        </FrameLayout>

</LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>
