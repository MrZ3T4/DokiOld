<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:targetApi="LOLLIPOP">

    <item android:id="@+id/state_on"
        android:drawable="@drawable/icon_recientes_selected"
        android:state_checked="true"/>

    <item android:id="@+id/state_off"
        android:drawable="@drawable/icon_recientes_unselect"
        android:state_checked="false"/>

    <transition
        android:drawable="@drawable/recientes_anim"
        android:fromId="@+id/state_off"
        android:toId="@id/state_on">
    </transition>

</animated-selector>